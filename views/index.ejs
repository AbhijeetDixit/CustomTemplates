            <div class="divider"></div>
          </div>
        </div>

        <div class="col s6">
          <div class="row">

            <div class="card blue-grey darken-1">
              <div class="slider">
                <ul class="slides">
                  <li>
                    <img src="images/abc.jpg">
                  </li>
                  <li>
                    <img src="images/abc1.jpg">
                  </li>
                </ul>
              </div>
            </div>
            
            <div class="card grey darken-4">
              <form class="col s12">
                <div class="row">
                  <div class="input-field col s12">
                    <input placeholder="What's on your mind?" id="some text" type="text" class="validate">
                    <label for="somename">Text</label>
                  </div>
                  <div class="divider"></div>
                </div>
              </form>
            </div>
            <!-- Here starts the post templates -->
            <!--post-items ng-repeat="post in posts" content="post"></post-item-->
            <div class="row" style="margin-top:150px;">
            <h5>Posts</h5>  
            <post-item ng-repeat="item in content" content="item" ng-cloak></post-item> 
            <!-- Post templates end -->
            </div>
          </div>
        </div>

        <div class="col s3">
          <div class="section">
            <h6>Recent</h6>
          </div>
          <div class="divider"></div>
          <div class="section">
            <h6>Subscribe</h6>
          </div>
          <div class="divider"></div>
          <div class="section">
            <h6>Timeline</h6>
          </div>
          <div class="divider"></div>
        </div>
      </div>
